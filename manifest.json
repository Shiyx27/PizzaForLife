{
    "manifest_version": 3,
    "name": "Pizza For Life",
    "version": "1.0.0",
    "description": "Replace images with yummy pizza images and toggle the feature on/off.",
    "permissions": ["activeTab", "storage"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "logo.png",
        "48": "logo.png",
        "128": "logo.png"
      }
    },
    "web_accessible_resources": [
      {
        "resources": [
          "pizza1.jpeg", "pizza2.jpeg", "pizza3.jpeg", "pizza4.jpeg",
          "pizza5.jpeg", "pizza6.jpeg", "pizza7.jpeg", "pizza8.jpeg",
          "pizza9.jpeg", "pizza10.jpeg", "pizza11.jpeg", "pizza12.jpeg",
          "pizza13.jpeg", "pizza14.jpeg", "pizza15.jpeg", "pizza16.jpeg",
          "pizza17.jpeg", "pizza18.jpeg", "pizza19.jpeg", "pizza20.jpeg",
          "pizza21.jpeg", "pizza22.jpeg", "pizza23.jpeg", "pizza24.jpeg",
          "pizza25.jpeg", "pizza26.jpeg"
        ],
        "matches": ["<all_urls>"]
      }
    ]
  }
  